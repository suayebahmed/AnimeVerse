<%= link_to "New Answer", new_question_answers_path(@question), class: "btn btn-secondary my-3 mb-5"%>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Answers</th>
    </tr>
    <tr><th></th></tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.title %></td>
      </tr>
      <tr><td><%= link_to 'edit', edit_question_answer_path(@question, answer), class: 'btn btn-outline-secondary btn-sm' %></td></tr>
      <tr><td><%= button_to 'destroy', question_answer_path(@question, answer), method: :delete, data: { turbo: false }, class: 'btn btn-outline-secondary btn-sm', form: { class: 'd-inline' } %></td></tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Back to Question', qa_path(@question), class: 'btn btn-outline-secondary' %>
</p>