
<h1>Add New Answer</h1>
<%= bootstrap_form_with model: @answer, method: :post, url: question_answers_path(@question), data: { turbo: false } do |f| %>
  <%= f.text_area :title %>
  <%= f.submit %>
<% end %>
<p class="mt-3">
  <%= link_to 'Cancel', qa_show_path(@question), class: 'btn btn-outline-secondary' %>
</p>