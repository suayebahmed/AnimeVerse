<div id="<%= dom_id article %>">
  <div class="container-fluid">
    <div class="col-sm-10">
      <div id="articles">
       <div class="card border-info mb">

          <div id="<%= dom_id article %>">

            <div class="row">

              <div class="col-md-3">
                <% if article.image.attached? %>
                  <%= image_tag(article.image, class: "img-thumbnail square")%>
                <%end%>
              </div>
              <div class="col-md-9">
                <div class="card-body text-info">
                  <h4><%= link_to article.title, article%></h4>
                  <%= article.body.first(100) %> ...
                </div>
              

                <div class="d-flex flex-wrap">
                  <%= article.created_at%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div>
        <div class="text-center">.:.</div>
      </div>

    </div>
  </div>

</div>


