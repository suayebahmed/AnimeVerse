
<h1>Edit Chat Message</h1>
<%= bootstrap_form_with model: @discussion, method: :patch, url: list_discussion_path(@list, @discussion), data: { turbo: false } do |f| %>
  <%= f.text_area :discus, :required => 'required', placeholder: 'Enter your message', size: "10x3" %>
  <%= f.submit "Update", class: 'btn btn-primary btn-sm'%>
<% end %>
<p class="mt-3">
  <%= link_to 'Cancel', list_discussions_path(@list), class: 'btn btn-outline-secondary' %>
</p>